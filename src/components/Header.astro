---
import { TypedText } from "./TypedText";

const url = Astro.url.pathname;
---

<header>
  <div class="typed-text-wrapper">
    <TypedText client:only />
  </div>
  <nav class="nav">
    <a href="/" class={`${url == "/" && "active"}`}>Home</a>
    <a href="/about-me" class={`${url == "about-me" && "active"}`}>About me</a>
    <a href="/projects" class={`${url == "projects" && "active"}`}>Projects</a>
    <a href="/studies" class={`${url == "studies" && "active"}`}>Studies</a>
    <a href="/experience" class={`${url == "experience" && "active"}`}>Experience</a>
    <a href="/tools" class={`${url == "tools" && "active"}`}>Tools</a>
    <div class={`links ${url == "/" && "hidden"}`}>
      <a class="icon" target="_blank" href="mailto:jorgecarfacpsico@gmail.com">
        <img src="/mail.svg" alt="email icon" />
      </a>
      <a class="icon" target="_blank" href="https://github.com/JorgeCarrascoF">
        <img src="/github.svg" alt="github icon" />
      </a>
      <a
        class="icon"
        target="_blank"
        href="https://www.linkedin.com/in/jorge-carrasco-facundo"
      >
        <img src="/linkedin.svg" alt="linkedin icon" />
      </a>
    </div>
  </nav>
  <nav class="nav-mobile">
    <div class="nav-wrapper">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
        ><title>menu</title><path
          d="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z"></path></svg
      >
      <a href="/" class={`${url == "/" && "active"}`}>Home</a>
      <a href="/about-me" class={`${url == "/about-me" && "active"}`}
        >About me</a
      >
      <a href="/projects" class={`${url == "/projects" && "active"}`}
        >Projects</a
      >
      <a href="/studies" class={`${url == "/studies" && "active"}`}>Studies</a>
      <a href="/experience" class={`${url == "/experience" && "active"}`}>Experience</a>
      <a href="/tools" class={`${url == "/tools" && "active"}`}>Tools</a>
    </div>
  </nav>
</header>

<style>
  header {
    z-index: 10;
    height: 3.5rem;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    position: fixed;
    top: 0;
    color: white;
    background-color: rgba(0, 0, 0);
  }

  .typed-text-wrapper {
    margin-left: 40px;
  }

  .nav {
    width: 60%;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
  }

  nav.nav-mobile {
    display: none;
    margin: 1rem;
    width: 50px;
    height: 50px;
    position: relative;
  }

  .nav-wrapper {
    width: 50px;
    max-height: 50px;
    position: absolute;
    top: 0;
    right: 0;
    background-color: #facf15;
    overflow: hidden;
    transition: all 0.3s;
    border-radius: 10px;
  }

  .nav-wrapper a {
    display: block;
    width: 100%;
    height: 50px;
    line-height: 50px;
    text-align: center;
    color: black;
    font-size: 1.2rem;
    transition: color 0.5s;
  }

  .nav-wrapper > a:first-of-type {
    margin-top: 50px;
  }

  .nav-wrapper a:hover {
    background-color: rgba(255, 255, 255, 0.6);
    color: black;
  }

  .nav-wrapper:hover {
    width: 150px;
    max-height: 800px;
  }

  .nav-wrapper svg {
    width: 50px;
    height: 50px;
    fill: black;
    position: absolute;
    top: 0;
    right: 0;
    transition: all 0.3s;
  }
  .nav-wrapper:hover svg {
    display: none;
  }

  a {
    color: #facf15;
    font-size: 1.6rem;
    text-decoration: none;
    border-bottom: 3px solid transparent;
  }

  a.active,
  a:hover {
    color: white;
  }

  .links {
    display: flex;
    justify-content: center;
    gap: 0.7rem;
  }

  .hidden {
    display: none;
  }

  .links > .icon > img {
    width: 1.8rem;
    height: 1.8rem;
    cursor: pointer;
  }

  @media (max-width: 767px) {
    nav.nav {
      display: none;
    }

    nav.nav-mobile {
      display: block;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    nav.nav {
      display: none;
    }

    nav.nav-mobile {
      display: block;
      
    }

    .nav-wrapper:hover {
    width: 180px;
  }

  .nav-wrapper a {
    font-size: 1.5rem;
  }
  }
</style>
